
@{
    ViewData["Title"] = "Listofactiveappointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Active Appointment</h1>
<br />

<div>
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <a asp-controller="Appointment" asp-action="Addappointment" class="btn btn-outline-success btn-fw">Add Appointment</a><br /><br />

                    <table class="table table-bordered table-responsive  table-hover">
                        <tr>
                            <th>Id</th>
                            <th>Patientname</th>
                            <th>Doctorname</th>
                            <th>AppointmentDate</th>
                            <th>Problem</th>
                            <th>Status</th>


                        </tr>
                        @foreach (AppointmentModel item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Patientname</td>
                                <td>@item.Doctorname</td>
                                <td>@item.AppointmentDate</td>
                                <td>@item.Problem</td>
                                <td>@item.Status</td>


                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


